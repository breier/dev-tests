{
	"Dump and Exit": {
		"prefix": "dump",
		"body": "var_dump($1); exit();",
		"description": "Dumps the content to console and exits"
	},
	"Echo Pretty JSON": {
		"prefix": "pretty",
		"body": [
			"echo json_encode(",
			"    ${1:var},",
			"    JSON_PRETTY_PRINT | JSON_UNESCAPED_SLASHES",
			") . PHP_EOL;"
		],
		"description": "Prints pretty unescaped JSON with a new line"
	},
	"New Class Method": {
		"prefix": "method",
		"body": [
			"/**",
			" * Declare ${2:methodName}",
			" *",
			" * @param ${3:\\$param} Comment",
			" *",
			" * @return ${4:void}",
			" */",
			"${1:public} function ${2:methodName}(${3:\\$param}): ${4:void}",
			"{",
			"    $0",
			"}"
		],
		"description": "New Method with php-doc"
	},
	"New File Documentation": {
		"prefix": "docnew",
		"body": [
			"<?php",
			"/**",
			" * PHP Version 7",
			" *",
			" * ${1:File Name} ${2:Category}",
			" *",
			" * @category ${2:Category}",
			" * @package  Breier\\\\${2:Category}",
			" * @author   Andre Breier <breier.de@gmail.com>",
			" * @license  GPLv3 /LICENSE",
			" * @link     none.io",
			" */",
			"$0"
		],
		"description": "New File Documentation with php-doc"
	}
}